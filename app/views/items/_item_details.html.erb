<div class="row" id="show_item">
 <div class="small-5 columns">
  <% if !(@item.photo_url.nil?) %>
  <p><%= image_tag @item.photo_url %></p>
  <%else%>
  <%= image_tag 'img_not_available.png' %>
  <% end %>
</div>

<div class="small-7 columns">
  <h3><%= @item.name %></h3>
  <!-- </div> -->


  <!-- </div> -->
  <p>
    <b>Active</b> 
    <!-- <br> -->
    <%= @item.active ? 'Yes' : 'No' %>
  </p>
  <!-- <br> -->
  <p>
    <b>Description</b> <br>
    <%= @item.description %>
  </p>
</div>
</div>

<div class="row">
  <div class="small-2 columns">
    <p>
      <b>Price</b> <br>
      <%= @item.current_price.nil? ? 'N/A' : number_to_currency(@item.current_price) %>
    </p>
  </div>

  <div class="small-2 columns">
    <p>
      <b>Category</b> <br>
      <%= @item.category.capitalize %>
    </p>
  </div>
  <div class="small-2 columns">
    <p>
      <b>Color</b> <br>
      <%= @item.color.nil? ? 'N/A' : @item.color %>
    </p>
  </div>
  <div class="small-2 columns end">
    <p>
      <b>Total weight</b> <br>
      <%= @item.weight.nil? ? 'N/A' : @item.weight %> lbs.
    </p>
  </div>
</div>

<div class="row">
  <% if logged_in? && (current_user.role == "admin" || current_user.role == "manager" || current_user.role == "shipper")  %>
  <div class="small-2 columns">
    <p>
      <b>Inventory Level</b> <br>
      <%= @item.inventory_level.nil? ? 'N/A' : @item.inventory_level %>
    </p>
  </div>
  <div class="small-2 columns end">
    <p>
      <b>Reorder Level</b>
      <br><%= @item.reorder_level.nil? ? 'N/A' : @item.reorder_level %>
    </p>
  </div>
  <% end %>

</div>



