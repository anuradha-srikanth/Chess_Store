<% if @active_orders.empty? %>
  <h4>No orders at this time.</h4>
<% else %>
  <h4>Active Orders</h4>
  <table class="table table-striped">
    <thead>
      <tr>
        <th width="225">School</th>
        <th width="150">Date</th>
        <th width="150">Grand Total</th>
      </tr>
    </thead>
    <tbody>
    <%= render 'list_of_orders' %>
    </tbody>
  </table>

  <h4>Pending Orders</h4>
  <table class="table table-striped">
    <thead>
      <tr>
        <th width="225">School</th>
        <th width="150">Date</th>
        <th width="150">Grand Total</th>
      </tr>
    </thead>
    <tbody>
    <%= render 'list_of_pending_orders' %>
    </tbody>
  </table>


<% end %>
<p>&nbsp;</p>