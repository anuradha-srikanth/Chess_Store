<%= simple_form_for @school, html: { class: 'form-horizontal', multipart: true } do |f| %>
<fieldset>
  <legend><%= controller.action_name.capitalize %> School </legend>

  <%#= f.input :user_id, collection: User.active.to_a, include_blank: true, input_html: {class: "avg"} %>
  <%= f.input :name, input_html: {class: "avg"} %>
  <%= f.input :street_1, input_html: {class: "avg"} %>
  <%= f.input :street_2, input_html: {class: "avg"} %>
  <%= f.input :city, input_html: {class: "avg"} %>
  <%= f.input :state, input_html: {class: "avg"} %>
  <%= f.input :zip, input_html: {class: "avg"} %>
  <%= f.input :min_grade, input_html: {class: "avg"} %>
  <%= f.input :max_grade, input_html: {class: "avg"} %>

<div class="form-actions">
  <%= f.submit nil, :class => 'button radius' %>
  <%= link_to 'Cancel', purchases_path, :class => 'button alert radius' %>
</div>
</fieldset>
<% end %>