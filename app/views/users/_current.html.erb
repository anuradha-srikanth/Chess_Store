  <div class='row'>
  <% users.each do |user| %>
  <div class="people-you-might-know small-12 medium-6 large-4 column">
  <div class="row add-people-section">
    <div class="columns about-people">
<!--       <div class="about-people-avatar">
        <img class="avatar-image" src="https://i.imgur.com/UPVxPjb.jpg" alt="Kishore Kumar">
      </div> -->
      <div class="about-people-author">
        <p class="author-name">
          <%= link_to user.proper_name, user_path(user) %>
        </p>

        <p> <%= user.role.capitalize %> </p>
        <p> <i class="fa fa-phone" aria-hidden="true"></i>
        <%= user.phone.nil? ? 'N/A' : (user.phone) %> </p>

        <p> <i class="fa fa-envelope" aria-hidden="true"></i>
        <%= user.email.nil? ? 'N/A' : (user.email) %> </p>

        <p> <i class="fa fa-user" aria-hidden="true"></i>
        <%= user.username.nil? ? 'N/A' : (user.username) %> </p>



        <!-- <p class="author-location">
          <i class="fa fa-map-marker" aria-hidden="true"></i>
          <%#= user.email %>
        </p>
        <p class="author-location">
          <i class="fa fa-map-marker" aria-hidden="true"></i>
          <%#= user.phone.nil? ? 'N/A' : (user.phone) %>
        </p>  -->
    </div>    
  </div>
  <div class="small-12 medium-6 columns add-friend">
    <div class="add-friend-action">
      <button class="button primary small">
        <i class="fa fa-user-plus" aria-hidden="true"></i>
        Add Friend
      </button>
      <button class="button secondary small">
        <i class="fa fa-user-times" aria-hidden="true"></i>
        Ignore
      </button>
    </div>
  </div>
</div>

</div>
<% end %>
